{% extends 'admin/layout.jinja2' %}
{% block body %}
<div class="clearfix"></div>

  <div class="content-wrapper">
    <div class="container-fluid">
        <!-- Breadcrumb-->
     <div class="row pt-2 pb-2">


     </div>
     </div>
    <!-- End Breadcrumb-->
    <!-- End Breadcrumb-->
      <div class="row">
        <div class="col-lg-5">

          <div class="card">
            <div class="card-body">


            <form method="POST" action="{{url_for('admin.slot_info')}}"  id="slotForm">
            <div class="form-group row">
                <label for="input-pass" class="col-sm-2 col-form-label">Select Slot</label>
                <div class="col-sm-5">
                 <select class="form-control" id="slotd" name="slots">
                  {% for c in price %}
                         <OPTION value={{c.id}}>{{c.slots}}</option>
                        {% endfor %}
                      
                  </select>
                </div>
              </div>

              <div class="form-group row">
                <label for="input-pass" class="col-sm-2 col-form-label">Slot Price</label>
                <div class="col-sm-5">
                  <input type="text" class="form-control" id="sprice" name="sprice">
                </div>
              </div>

              <div class="form-footer">
                    <button type="submit" class="btn btn-success" name="save" value="save"><i class="fa fa-check-square-o"></i> SAVE</button>
                    &nbsp;
                    <button type="submit" class="btn btn-success" name="update" value="update" ><i class="fa fa-check-square-o"></i> UPDATE</button>
                    &nbsp;
                    <hr>
                    <div class="text-center">
                    {% with messages = get_flashed_messages(with_categories=true) %}
                        {% if messages %}
                            {% for category, message in messages %}
                                <div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">
                                    <span>{{ message }}</span>
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                      <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            {% endfor %}
                        {% endif %}
                    {% endwith %}
                    </div>
                </div>
              </div>
              </div>
              </form>
              
		  </div>
        </div>
      </div>
<!--start overlay-->
	  <div class="overlay toggle-menu"></div>
	<!--end overlay-->
    </div>
    <!-- End container-fluid-->

   </div><!--End content-wrapper-->
   <!--Start Back To Top Button-->


  </div><!--End wrapper-->


<script>
$("#slotForm").validate({
  rules: {
    sprice: {
      required: true,
      sprice: true
    }
  },
  messages: {
   
    sprice: {
      required: "Put on slot price",
      sprice: "Your price must be in digit"
    }
  }
});

</script>  

<script>

$(document).ready(function(){
 var slot_select = $("#slotd").val();
 var price_select = $("#sprice").val();


  $("#slotd").change(function(){
    var slot = $(this).val();

    $.ajax({
      url:"/admin/price/"+slot,
      success: function(response) {
        $('#sprice').val(response.slotprice)
      }
        
      });
});
})
    
</script>

</script>
{% endblock %}