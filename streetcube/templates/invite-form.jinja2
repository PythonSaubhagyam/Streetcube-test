						<div class="row">
							<div class="col-md-2"></div>
							<div class="col-md-8">
								<div class="form-group mt-4 mb-4">
				
									<input type="text" class="form-control form-control-lg" placeholder="Enter your mobile number." name="mobile">
									{% for error in form.mobile.errors %}
										<span style="color:red;">{{error}}</span>
									{% endfor %}
								</div>
							</div>
							<div class="col-md-2"></div>
						</div>
					</div>
					<div class="card-footer">
						<div class="row">
							<div class="col-6"></div>
							<div class="col-6 text-right">
								<button class="btn btn-danger" type="submit">Next</button>
							</div>
						</div>
					</div>
					</form>
				</div>
			</div>
			<div class="col-md-2"></div>
		</div>
	</div>
</section>
{% endblock %}

