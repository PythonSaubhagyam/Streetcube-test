{% include "include/page-header.jinja2" %}

<section class="bg-dark2">
    <h5 class="text-center pt-3 text-green"><b>GAZEBO APPLICATION FORM</b></h5>
    <div class="text-center">
		<img width="100" src="{{url_for('static', filename='img/icons/cube.svg')}}">
	</div>
	<div class="container">
	    <div class="row">
	    <div class="col-md-3"></div>
	    <div class="col-md-6">
	       

        <div class="form-box mt-2">
            <div class="form-group row">
               
                <div class="col-sm-4"></div>
                <div class="col-sm-8">
                 <h6><b>Part 4: Food style</b></h6>
                </div>
            </div>
            
            <form action="" method="POST" name="gazeboappfrmfrth">
                <div class="form-group row">
                    <label for="colFormLabelSm" class="col-sm-4 col-form-label col-form-label-sm">Street Food Style</label>
                    <div class="col-sm-8">
                        <select class="form-control form-control-sm" id="" name="food_style" >
                            <option value="">Choose One.</option>
                            {% for food_list in food_style_list %}
                                 {%if ga_prt_frth_up.food_style== food_list.cuisine_name%} 
                                    <option value="{{ food_list.cuisine_name }}" selected>{{ food_list.cuisine_name }}</option>
                                 {%else%}
                                    <option value="{{ food_list.cuisine_name }}">{{ food_list.cuisine_name }}</option>
                                {%endif%}
                            {% endfor %}
                            
                        </select>
                    </div>
                </div>
                
                <p>Please describe your street food style in your own words. Then select from the drop down, the name that best fits</p>
                <div class="form-group mb-3">
                    <textarea class="form-control text-white" rows="3" name="describe_food_style">{{ga_prt_frth_up.describe_food_style}}</textarea>
                </div>
                {%if ga_prt_frth_up%}
                {% set list1 = ga_prt_frth_up.suplier_list.split(',') %}
                <div class="form-group row">
                    <label for="colFormLabelSm" class="col-sm-4 col-form-label col-form-label-sm">Supplier list 1</label>
                    <div class="col-sm-8">
                      <input type="text" class="form-control form-control-sm" id="" name="suplier_list" value="{{ list1[0] }}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="colFormLabelSm" class="col-sm-4 col-form-label col-form-label-sm">2</label>
                    <div class="col-sm-8">
                      <input type="text" class="form-control form-control-sm" id="" name="suplier_list" value="{{ list1[1] }}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="colFormLabelSm" class="col-sm-4 col-form-label col-form-label-sm">3</label>
                    <div class="col-sm-8">
                      <input type="text" class="form-control form-control-sm" id="" name="suplier_list" value="{{ list1[2] }}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="colFormLabelSm" class="col-sm-4 col-form-label col-form-label-sm">4</label>
                    <div class="col-sm-8">
                      <input type="text" class="form-control form-control-sm" id="" name="suplier_list" value="{{ list1[3] }}">
                    </div>
                </div>
                {%else%}
                <div class="form-group row">
                    <label for="colFormLabelSm" class="col-sm-4 col-form-label col-form-label-sm">Supplier list 1</label>
                    <div class="col-sm-8">
                      <input type="text" class="form-control form-control-sm" id="" name="suplier_list" >
                    </div>
                </div>
                <div class="form-group row">
                    <label for="colFormLabelSm" class="col-sm-4 col-form-label col-form-label-sm">2</label>
                    <div class="col-sm-8">
                      <input type="text" class="form-control form-control-sm" id="" name="suplier_list">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="colFormLabelSm" class="col-sm-4 col-form-label col-form-label-sm">3</label>
                    <div class="col-sm-8">
                      <input type="text" class="form-control form-control-sm" id="" name="suplier_list" >
                    </div>
                </div>
                <div class="form-group row">
                    <label for="colFormLabelSm" class="col-sm-4 col-form-label col-form-label-sm">4</label>
                    <div class="col-sm-8">
                      <input type="text" class="form-control form-control-sm" id="" name="suplier_list" >
                    </div>
                </div>
                {%endif%}
               

                
                
                
                <div class="text-right">
                    <button type="submit" class="btn-none"><img height="35" draggable="false" src="{{url_for('static', filename='img/icons/con-btn.svg')}}"></button>
                </div>
                
            </form>
        </div>
        <br>
                <br>
	    </div>
        <p class="text-danger text-center"> {{msg}} </p>
	    <div class="col-md-3"></div>
	</div>
	</div>
</section>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"> </script>
<script>

// Wait for the DOM to be ready
$(function() {
  $("form[name='gazeboappfrmfrth']").validate({
    rules: {
      food_style: "required",
      describe_food_style: {
        required: true,
        minlength: 5,
        maxlength: 1250,

      },
      suplier_list: "required",
    },
   
    messages: {
      food_style: "Please choose one.",
      describe_food_style: {
        required: "Please provide description",
        minlength: "Your description minimum length should be 5",
        maxlength: "Your description maximum length should be 1250",

      },
      suplier_list: "Please enter suplier list",
     
    },
    submitHandler: function(form) {
      form.submit();
    }
  });
});
</script>
{% include "include/page-footer.jinja2" %}