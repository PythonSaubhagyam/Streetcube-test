{% include "include/page-header.jinja2" %}

<section class="bg-dark2">
    <h5 class="text-center pt-3 text-green"><b>GAZEBO APPLICATION FORM</b></h5>
    <div class="text-center">
		<img width="100" src="{{url_for('static', filename='img/icons/cube.svg')}}">
	</div>
	<div class="container">
	    <div class="row">
	    <div class="col-md-3"></div>
	    <div class="col-md-6">
	       

        <div class="form-box mt-2">
            <div class="form-group row">
                <div class="col-sm-4"></div>
                <div class="col-sm-8">
                 <h6><b>Part 3: Emergency</b></h6>
                </div>
            </div>
            
            <form action="" method="POST" name="gazeboappfrmthr">
                <div class="form-group row">
                    <label for="colFormLabelSm" class="col-sm-4 col-form-label col-form-label-sm">Nationality</label>
                    <div class="col-sm-8">
                        <select class="form-control form-control-sm" id="" name="nationality">
                            <option value="">Choose One:</option> 
                              <option {%if ga_prt_thr_up.nationality=='Text-1'%} selected{%endif%}>Text-1</option>  
                              <option {%if ga_prt_thr_up.nationality=='Text-2'%} selected{%endif%}>Text-2</option>  
                              <option {%if ga_prt_thr_up.nationality=='Text-3'%} selected{%endif%}>Text-3</option>  
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="colFormLabelSm" class="col-sm-4 col-form-label col-form-label-sm">Passport No </label>
                    <div class="col-sm-8">
                      <input type="text" class="form-control form-control-sm" id="" name="passport_no" value="{{ga_prt_thr_up.passport_no}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="colFormLabelSm" class="col-sm-4 col-form-label col-form-label-sm">National Insurance No</label>
                    <div class="col-sm-8">
                      <input type="text" class="form-control form-control-sm" id="" name="national_insurance_no" value="{{ga_prt_thr_up.national_insurance_no}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="colFormLabelSm" class="col-sm-4 col-form-label col-form-label-sm">Known medical conditions</label>
                    <div class="col-sm-8">
                      <input type="text" class="form-control form-control-sm" id="" name="known_medical_conditions" value="{{ga_prt_thr_up.known_medical_conditions}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="colFormLabelSm" class="col-sm-4 col-form-label col-form-label-sm">Next of kin Name</label>
                    <div class="col-sm-8">
                      <input type="text" class="form-control form-control-sm" id="" name="next_of_kin_name" value="{{ga_prt_thr_up.next_of_kin_name}}"> 
                    </div>
                </div>
                <div class="form-group row">
                    <label for="colFormLabelSm" class="col-sm-4 col-form-label col-form-label-sm">Next of kin contact</label>
                    <div class="col-sm-8">
                      <input type="text" class="form-control form-control-sm" id="" name="next_of_kin_contact" value="{{ga_prt_thr_up.next_of_kin_contact}}">
                    </div>
                </div>
                
                
                
                <div class="text-right">
                    <button type="submit" class="btn-none"><img height="35" draggable="false" src="{{url_for('static', filename='img/icons/con-btn.svg')}}"></button>
                </div>
            </form>
        </div>
        <p class="text-danger text-center"> {{msg}} </p>
	    </div>
	    <div class="col-md-3"></div>
	</div>
	</div>
</section>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"> </script>
<script>

// Wait for the DOM to be ready
$(function() {
  $("form[name='gazeboappfrmthr']").validate({
    rules: {
      nationality: "required",
      passport_no: "required",
      national_insurance_no: "required",
      known_medical_conditions: "required",
      next_of_kin_name: "required",
      next_of_kin_contact: "required",
     
    },
   
    messages: {
      nationality: "Please choose one.",
      passport_no: "Please enter your passport number",
      national_insurance_no: "Please enter insurance number",
      known_medical_conditions: "Please enter medical conditions",
      next_of_kin_name: "Please enter next kin name",
      next_of_kin_contact: "Please enter kin contact",
    },
    submitHandler: function(form) {
      form.submit();
    }
  });
});
</script>

{% include "include/page-footer.jinja2" %}