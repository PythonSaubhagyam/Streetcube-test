{% include "include/page-header.jinja2" %}

<style>
.form-control:disabled, .form-control[readonly] {
    background-color: #eaeff500!important;
    
}
</style>
<section class="bg-dark2">
    <h5 class="text-center pt-3 text-green"><b>GAZEBO APPLICATION FORM</b></h5>
    <div class="text-center">
		<img width="100" draggable="false" src="{{url_for('static', filename='img/icons/cube.svg')}}">
	</div>
	<div class="container">
	    <div class="row">
	    <div class="col-md-3"></div>
	    <div class="col-md-6">
	       
        {% with messages = get_flashed_messages(with_categories=true) %}
            {% if messages %}
                {% for category, message in messages %}
                    <div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">
                        <span>{{ message }}</span>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                {% endfor %}
            {% endif %}
        {% endwith %}
        <div class="form-box mt-2">
            <div class="form-group row">
                <div class="col-sm-3"></div>
                <div class="col-sm-9">
                 <h6><b>Part 2: Contact</b></h6>
                </div>
            </div>
            
             <form action="" method="POST" name="gazeboappfrmsec">
                <div class="form-group row">
                    <label for="colFormLabelSm" class="col-sm-3 col-form-label col-form-label-sm">Email </label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control form-control-sm" id="" name="email" value="{{session.get('email')}}" readonly>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="colFormLabelSm" class="col-sm-3 col-form-label col-form-label-sm">Homephone</label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control form-control-sm" id="" name="hphone" >
                    </div>
                </div>
                <div class="form-group row">
                    <label for="colFormLabelSm" class="col-sm-3 col-form-label col-form-label-sm" >Telephone</label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control form-control-sm" id="" name="telphone" value="{{session.get('mobile')}}" readonly>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="colFormLabelSm" class="col-sm-3 col-form-label col-form-label-sm">Postcode</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control form-control-sm" id="" name="postcode">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="colFormLabelSm" class="col-sm-3 col-form-label col-form-label-sm">Street</label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control form-control-sm" id="" name="street">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="colFormLabelSm" class="col-sm-3 col-form-label col-form-label-sm">Town</label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control form-control-sm" id="" name="town">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="colFormLabelSm" class="col-sm-3 col-form-label col-form-label-sm" >City</label>
                    <div class="col-sm-9">
                         <input type="text" class="form-control form-control-sm" id="" name="city">
                    </div>
                </div>
                
                <div class="text-right">
                    <button type="submit" class="btn-none"><img height="35" draggable="false" src="{{url_for('static', filename='img/icons/con-btn.svg')}}"></button>
                </div>
            </form>

        </div>
	    </div>
	    <div class="col-md-3">

        </div>
	</div>
	</div>
</section>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"> </script>
<script>

  jQuery.validator.addMethod("alphanumeric", function(value, element) {
          return this.optional(element) || /^[a-zA-Z0-9]+$/.test(value);
  }); 

    function onlyNumbers(event) {
        var e = event || evt; // for trans-browser compatibility
        var charCode = e.which || e.keyCode;
        if (charCode > 31 && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }

// Wait for the DOM to be ready
$(function() {
  $("form[name='gazeboappfrmsec']").validate({
    rules: {
      email: {
        required: true,
        email: true
      },
      hphone: {
        required: true,
        minlength: 10,
        maxlength: 10,
      },
      telphone: {
        required: true,
        minlength: 10,
        maxlength: 10,

      },
       postcode: {
        required: true,
        minlength: 5,
        maxlength: 6,
        alphanumeric: true,
      },
      street: "required",
     
      town: "required",
      city: "required",
     
    },
   
    messages: {
      
      email: "Please enter a valid email address",
      hphone: "Please enter your home phone number",
      telphone: "Please enter your telephone",
      postcode: {
        required: "Please provide a valid,postcode",
        minlength: "Your postcode minimum length should be 5",
        maxlength: "Your postcode maximum length should be 6",
        alphanumeric: "Only accept alphanumeric",

      },
      street: "Please enter your street",
     
      town: "Please enter your town",
      city: "Please enter your city",
      
    },
    submitHandler: function(form) {
      form.submit();
    }
  });
});
</script>
{% include "include/page-footer.jinja2" %}