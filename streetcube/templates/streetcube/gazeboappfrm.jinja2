{% include "include/page-header.jinja2" %}

<section class="bg-dark2">
    <h5 class="text-center pt-3 text-green"><b>GAZEBO APPLICATION FORM</b></h5>
    <div class="text-center">
		<img width="100" src="{{url_for('static', filename='img/icons/cube.svg')}}">
	</div>
	<div class="container"> 
	    <div class="row">
	    <div class="col-md-3"></div>
	    <div class="col-md-6">
	        <p class="mt-2">Please prepare your level 2 hygiene, safety, sustainability policy and
your Covid risk assessment - there are more forms also, but don’t
worry if you don’t have these, we can help</p>

        <div class="form-box">
            <div class="form-group row">
                <div class="col-sm-3"></div>
                <div class="col-sm-9">
                 <h6><b>Part 1: Personal Details</b></h6>
                </div>
            </div>
            
            <form action="" method="POST" name="gazeboappfrm">
                <div class="form-group row">
                    <label for="colFormLabelSm" class="col-sm-3 col-form-label col-form-label-sm">Mr/Mrs/Ms </label>
                    <div class="col-sm-9">
                      <select class="form-control form-control-sm" id="" name="name_prfx">
                          <option value="">Choose one:</option>  
                          <option value="mr">Mr</option>
                          <option value="mrs">Mrs</option>
                          <option value="ms">Ms</option>
                      </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="colFormLabelSm" class="col-sm-3 col-form-label col-form-label-sm">First Name</label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control form-control-sm" id="" name="fname" value="{{session.get('uname')}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="colFormLabelSm" class="col-sm-3 col-form-label col-form-label-sm">Last Name</label>
                    <div class="col-sm-9">
                      <input type="text" class="form-control form-control-sm" id="" name="lname" value="{{session.get('lname')}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="colFormLabelSm" class="col-sm-3 col-form-label col-form-label-sm">Date of Birth</label>
                    <div class="col-sm-9">
                      <input id="datepicker" class="form-control form-control-sm" name="dob">
                      <!--<input  width="276" />-->
                    </div>
                </div>
                <div class="text-right">
                    <button type="submit" class="btn-none mt-3"><img height="35" draggable="false" src="{{url_for('static', filename='img/icons/con-btn.svg')}}"></button>
                </div>
            </form>
        </div>
	    </div>
      
	    <div class="col-md-3">
      
      </div>
	</div>
	</div>
</section>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"> </script>
<script>
$.validator.methods.agev = function( value, element ) {
        var dob = new Date($("#datepicker").val());
        console.log(dob);
        var today = new Date();
        var age = Math.floor((today-dob) / (365.25 * 24 * 60 * 60 * 1000));
        if(age<18){
            return false
        }else{
            return true
        }
  }
// Wait for the DOM to be ready
$(function() {
  $("form[name='gazeboappfrm']").validate({
    rules: {
      name_prfx: "required",
      fname: "required",
     
      lname: "required",
      dob: {
            required: true,
            agev: true
        },
     
    },
   
    messages: {
      name_prfx: "Please choose name of prefix",
      fname: "Please enter your first name",
      lname: "Please enter your last name",
      dob:{
            required:"Please enter your dob.",
            agev:"Age should not be less than 18 Years.",
         },
    },
    submitHandler: function(form) {
      form.submit();
    }
  });
});
</script>
