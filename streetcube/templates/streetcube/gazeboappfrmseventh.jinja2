// Wait for the DOM to be ready
$(function() {
  $("form[name='gazeboappfrmseventh']").validate({
    rules: {
      
      sustain_training_doc: "required",
      haccp_training_doc: "required",
      lpg_gas_safe_doc: "required",
      copy_of_pass_doc: "required",
      proof_of_insu_doc: "required",
      about_exp: "required",
      
     
    },
   
    messages: {
      sustain_training_doc: "Please upload sustain training doc",
      haccp_training_doc: "Please upload haccp training doc",
      lpg_gas_safe_doc: "Please upload lpg gas safe doc",
      copy_of_pass_doc: "Please upload Copy of passport",
      proof_of_insu_doc: "Please upload health safety doc",
      about_exp: "Please enter your experience",
     
      
    },
    submitHandler: function(form) {
      form.submit();
    }
  });
});
</script>

