{% extends 'layout/layout.jinja2' %}
{% block body %}
<section class="page-bg">
	<div class="container text-center">
		<img width="150" src="{{ url_for ('static' ,filename='images/logo/logo.png')}}">
		<h1 class="text-white mt-5">Mobile Verification</h1>
	</div>
</section>
<section class="pt-5 pb-5 bg-silver">
	<div class="container">
		<div class="row">
			<div class="col-md-2"></div>
			<div class="col-md-8">
				<div class="card">
				<form method="POST">
				{{form.csrf_token}}
					<div class="card-body text-center pt-5 pb-5">
						
						
						<div class="row">
							<div class="col-md-2"></div>
							<div class="col-md-8">
								
								<div class="alert alert-danger mt-3">
									When you click on 'Yes', we will send your a 4 digit pin, please check the number and enter it on the next page
								</div>
							</div>
							<div class="col-md-2"></div>
						</div>
					</div>
					<div class="card-footer">
						<div class="row">
							<div class="col-6"></div>
							<div class="col-6 text-right">
								<button class="btn btn-danger" type="submit">Get OTP</button>
							</div>
						</div>
					</div>
					</form>
				</div>
			</div>
			<div class="col-md-2"></div>
		</div>
	</div>
</section>
{% endblock %}

{% block script %}

{% endblock %}