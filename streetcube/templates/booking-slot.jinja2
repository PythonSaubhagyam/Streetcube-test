{% extends 'layout/layout.jinja2' %}
{% block body %}
<section class="page-bg">
    <div class="container text-center">
        <img width="150" src="{{ url_for('static', filename='images/logo/logo.png')}}">
        <h1 class="text-white mt-5">Select your slot and book</h1>
    </div>
</section>
<section>
	<div class="container mt-4 mb-4">
		<img class="img-fluid" src="{{ url_for('static', filename='images/banner/map.svg')}}">
	</div>
</section>
<section>
	<div class="container mb-4">
		<h3 class="mt-5 mb-5 text-center">Select your <spna class="text-danger">slot</spna></h3>
		
		<div class="row">
            {% for sl in slots %}
			<div class="col-md-2 col-6">
				<a href="{{ url_for('main.booking',id = sl.id) }}" class="btn btn-block mb-3 f-btn f2">{{ sl.slots }}</a>
			</div>
            {% endfor %}
		</div>

	</div>
</section>

{% endblock %}

{% block script %}

{% endblock %}