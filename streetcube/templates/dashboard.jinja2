{% extends 'layout/layout.jinja2' %}
{% block body %}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="container-fluid mt-4 mb-4 px-5">
<div class="row px-5">
  <div class="col-md-3 px-5 mb-4">
    <div class="card bg-primary">
    <div class="btn-group-vertical">
      <button type="button" class="btn btn-info bg-dark text-white"><a class="text-decoration-none" href="{{url_for('main.dashboard')}}">Profile</a></button>
      <button type="button" class="btn btn-info bg-dark text-white"><a class="text-decoration-none" href="{{url_for('main.change_pass')}}">Change password</a></button>
      <button type="button" class="btn btn-info bg-dark text-white"><a class="text-decoration-none" href="{{url_for('main.booked_details')}}">Booked Details</a></button>
    </div>
  </div>
  </div>
  <div class="col-md-9">
    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
      <div class="text-center">
              {% with messages = get_flashed_messages(with_categories=true)  %}

                  {% if messages %}

                         {% for category,message in messages %}
                          <div class ="alert alert-{{ category }} alert-dismissible" role="alert">
                              <button type="button" class="close" data-dismiss='alert' aria-label="close">
                                  <span aria-hidden="true">x</span>
                              </button>
                              {{message}}
                          </div>
                          {% endfor %}

                  {%endif%}

              {% endwith %}

      </div>
      <form  id="signupForm" method="POST" autocomplete="off">
        <div class="card">
                <div class="card-body">

                    <h5 class="form-header text-uppercase">
                      <i class="fa fa-address-book-o"></i>
                      User Profile
                    </h5>
                    <hr>
                    <div class="form-group row">
                      <label for="input-10" class="col-sm-2 col-form-label">User Name</label>
                      <div class="col-sm-10">
                        <input type="text" class="form-control" id="uname" name="uname" value="{{user.uname}}">
                      </div>
                    </div>
                    
                    <div class="form-group row">
                      <label for="input-pass" class="col-sm-2 col-form-label">Assign Role</label>
                      <div class="col-sm-10">

                        <input type="text" class="form-control" id="input-role" name="role" value="{{role.role_title}}" disabled="">
                      
                      </div>
                    </div>

                    <h5 class="form-header text-uppercase">
                    <i class="fa fa-envelope-o"></i>
                      Contact Info
                    </h5>
                    <hr>
                    <div class="form-group row">
                      <label for="input-14" class="col-sm-2 col-form-label">E-mail</label>
                      <div class="col-sm-4">
                        <input type="email" class="form-control" id="input-14" name="email" value="{{user.email}}">
                      </div>
                      <label for="input-16" class="col-sm-2 col-form-label">Contact Number</label>
                      <div class="col-sm-4">
                        <input type="text" class="form-control" id="input-16" name="mobile" value="{{user.mobile}}">
                      </div>
                    </div>
                </div>
              </div>
              <!-- card 2 -->
              <div class="card mt-4">
                <div class="card-body">
                    <h5 class="form-header text-uppercase">
                      <i class="fa fa-user-circle-o"></i>
                      Trader Details
                    </h5>
                    <hr>
                    <div class="form-group row">
                      <label for="input-1" class="col-sm-2 col-form-label">Address</label>
                      <div class="col-sm-4">
                          <textarea class="form-control" id="input-1" name="address" value="{{user.id}}">{{user.address}}</textarea>
                      </div>
                      <label for="input-2" class="col-sm-2 col-form-label">Company Name</label>
                      <div class="col-sm-4">
                        {# <input type="text" class="form-control" id="inputa" name="c_name" value="{{tr.c_name}}"> #}
                      </div>
                    </div>
                      <div class="form-group row">

                        <label for="input-2" class="col-sm-2 col-form-label">Brand Name</label>
                      <div class="col-sm-4">
                      {#  <input type="text" class="form-control" id="inputb" name="b_name" value="{{tr.b_name}}"> #}
                      </div>
                      <label for="input-2" class="col-sm-2 col-form-label">Description of services and products</label>
                      <div class="col-sm-4">
                      {#  <textarea class="form-control" id="inputd" name="descrip_of_service" value="{{tr.descrip_of_service}}">{{tr.descrip_of_service}}</textarea> #}
                      </div>

                    </div>

                      <div class="form-group row">
                      <label for="input-2" class="col-sm-2 col-form-label">Story - how did you start up?</label>
                      <div class="col-sm-4">
                      {#    <textarea class="form-control" id="inputg" name="story" value="{{tr.story}}">{{tr.story}}</textarea> #}
                      </div>
                    </div>

                    <h5 class="form-header">
                    <i class="fa fa-file-text-o"></i>
                      Documents Upload &nbsp;&nbsp;<input type="checkbox" class="" id="updocs" name="updocs" style="top: .8rem; width: 1.25rem;height: 1rem;">  
                    </h5>
                    <hr>
                    <div class="answer" style="display: block;">
                    <div class="form-group row">
                      <label for="input-8" class="col-sm-2 col-form-label">Public liability insurance</label>
                      <div class="col-sm-4">
